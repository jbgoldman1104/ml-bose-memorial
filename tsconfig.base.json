{
  "compileOnSave": false,
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "importHelpers": false,
    "lib": ["es2019", "dom"],
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "paths": {
      "@kleeen/auth": ["libs/auth/src/index.ts"],
      "@kleeen/backend/utils": ["libs/backend/utils/src/index.ts"],
      "@kleeen/common/utils": ["libs/common/utils/src/index.ts"],
      "@kleeen/elements": ["libs/elements/src/index.ts"],
      "@kleeen/end-product/frontend/things": ["libs/end-product/frontend/things/src/index.ts"],
      "@kleeen/environment": ["libs/environment/src/index.ts"],
      "@kleeen/frontend/utils": ["libs/frontend/utils/src/index.ts"],
      "@kleeen/i18n": ["libs/i18n/src/index.ts"],
      "@kleeen/infusion": ["libs/infusion/src/index.ts"],
      "@kleeen/investigations": ["libs/investigations/src/index.ts"],
      "@kleeen/react/atomic-elements": ["libs/react/atomic-elements/src/index.ts"],
      "@kleeen/react/components": ["libs/react/components/src/index.ts"],
      "@kleeen/react/hooks": ["libs/react/hooks/src/index.ts"],
      "@kleeen/react/state-management": ["libs/react/state-management/src/index.ts"],
      "@kleeen/render-utils": ["libs/render-utils/src/index.ts"],
      "@kleeen/settings": ["apps/cloud/src/app/settings/index.ts"],
      "@kleeen/styles": ["libs/styles/src/index.ts"],
      "@kleeen/testing/front-end": ["libs/testing/front-end/src/index.ts"],
      "@kleeen/things": ["libs/things/src/index.ts"],
      "@kleeen/types": ["libs/types/src/index.ts"],
      "@kleeen/widgets": ["libs/widgets/src/index.ts"]
    },
    "resolveJsonModule": true,
    "rootDir": ".",
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": false,
    "target": "es2018",
    "typeRoots": ["node_modules/@types"]
  },
  "exclude": ["node_modules", "tmp"]
}
